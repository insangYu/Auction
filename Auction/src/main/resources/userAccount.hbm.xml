<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- 모델쪽의 Comment 클래스와 테이블 comment를 매핑한다. -->
<hibernate-mapping package="kr.ac.jbnu.model">
	<class name="UserAccount" table="user_account">
		<id name="id" column="user_id" />
		<property name="userName" column="user_name" />
		<property name="email" column="user_email" />
		<property name="password" column="user_password" />
		<property name="phone" column="user_phone" />
		<property name="balance" column="user_balance" />
	</class>
</hibernate-mapping>